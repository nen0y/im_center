mixin header(color)
    header
        .mobile_header
            .container-fluide
                .line
                    .__left
                        a(href="#").logo
                            img(src="assets/img/content/Gerb.png" alt="emblem").logo_mobile
                            img(src="assets/img/content/flag-divider-64-3.png" alt="emblem").logo-line
                            img(src="assets/img/content/group-132.png" alt="emblem").logo_mobile
                            
                    .__right
                        a(href="#").visible
                            img(src='assets/img/minified-svg/accessibility-icon-big.svg', alt='vis')
                        .sendwich.o
                            span.sendwich-btn
            .mobile__menu
                .container-fluide
                    .flex
                        .top
                            .line
                                .__left
                                    a(href="#gov").logo.main-logo.main-logo-dark
                                        .icon-flag
                                            .yellow
                                            .blue
                                        .wrap-text
                                            span.one
                                                | gov.ua
                                            span.light
                                                | Державні сайти України</span>
                                .__right
                                    .sendwich.c
                                        span.sendwich-btn
                            .logo_set
                                img(src="assets/img/content/Gerb.png" alt="emblem").logo_mobile
                                img(src="assets/img/content/flag-divider-64-3.png" alt="emblem").logo-line
                                img(src="assets/img/content/group-132.png" alt="emblem").logo_mobile
                                
                            .header-entity
                                p.had Центр допомоги переселенцям
                                p.sub_had Покровської міської ради
                            menu
                                p.had Меню
                                ul.menu

                                    li
                                        a(href="#") Головна
                                    li
                                        a(href="#") Потрібна допомога
                                    li
                                        a(href="#") Пільги та гарантії
                                    li
                                        a(href="#") Контакти

                        .bottom
                            .social
                                a(href='#')
                                    img(src='assets/img/content/facebook@1x.png', alt='fb')
                                a(href='#')
                                    img(src='assets/img/content/twitter.png', alt='tw')
        .header
            .top_part
                .container-fluide
                    .line
                        .__left
                            a(href="#gov").logo.main-logo.main-logo-dark
                                .icon-flag
                                    .yellow
                                    .blue
                                .wrap-text
                                    span.one
                                        | gov.ua
                                    span.light
                                        | Державні сайти України
                            .social
                                a(href='#')
                                    i.ic.fab.fa-facebook-square
                                a(href='#')
                                    i.ic.fab.fa-twitter
                        .__right
                            a(href="#").visible
                                img(src='assets/img/content/accessibility-icon-big.png', alt='vis')
                            p.lenguage
                                
                                    select
                                    
                                        option.lang-ua
                                            p Українська
                                        option.lang-en
                                            p English
                                        option.lang-ru
                                            p Русский
                                
                            .login.logined
                                p Вхід
                                img(src="assets/img/content/dropdown.png" alt="tr")
                                ul.logined_menu(style="display:none;")
                                    li
                                        a(href='#') Вхід
                                    li
                                        a(href='#') Реєстрація
                                .after_login
                                    .__left
                                        .img(style='background-image:url("assets/img/content/mainchair-photo.png")')
                                    .__right
                                        p.name Рева<br> Олекснандр Олександрович
                                        a(href="#").link Налаштування
                                        a(href="#").link Вихід
            .bottom_part
                .container
                    .line
                        .__left
                            img(src="assets/img/content/group-132.png" alt="emblem").emblem
                            .header-entity
                                p.had(style={color}) Центр допомоги переселенцям
                                p.sub_had(style={color}) Покровської міської ради
                        .__right
                            menu
                                ul.menu
                                    li
                                        a(href="#" style={color}) Головна
                                    li
                                        a(href="#" style={color}) Потрібна допомога
                                    li
                                        a(href="#" style={color}) Пільги та гарантії
                                    li
                                        a(href="#" style={color}) Контакти
